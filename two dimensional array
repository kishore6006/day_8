#include <stdio.h>
#define STUDENTS 5
#define SUBJECT 3

int main() {
    int roll[STUDENTS];
    int mark[STUDENTS][SUBJECT];
    int Total[STUDENTS];

    for (int i = 0; i < STUDENTS; i++) {
        printf("Enter the roll number for student %d: ", i + 1);
        scanf("%d", &roll[i]);
        Total[i] = 0;
        for (int j = 0; j < SUBJECT; j++) {
            printf("Enter the mark of Subject %d: ", j + 1);
            scanf("%d", &mark[i][j]);
            Total[i] += mark[i][j];
        }
        printf("\n");
    }

    printf("\nMarksheet:\n");
    printf("Roll No\tMarks1\tMarks2\tMarks3\tTotal\n");

    for (int i = 0; i < STUDENTS; i++) {
        printf("%d\t", roll[i]);
        for (int j = 0; j < SUBJECT; j++) {
            printf("%d\t", mark[i][j]);
        }
        printf("%d\n", Total[i]);
    }

    return 0;
}
